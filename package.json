{
  "name": "crafty",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:cli": "tsc -t es5 --noEmit --downlevelIteration src/apps/cli.ts && esbuild src/apps/cli.ts --bundle --platform=node --format=cjs --outfile=dist/cli.js",
    "build:api": "tsc -t es5 --noEmit --downlevelIteration --esModuleInterop src/apps/api.ts && esbuild src/apps/api.ts --bundle --platform=node --format=cjs --outfile=dist/api.js",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev --name init",
    "test:integration": "npx jest message-prisma",
    "test:integration:debug": "set DEBUG=testcontainers* && npx jest message-prisma",
    "start:api": "node dist/api.js"
  },
  "bin": {
    "crafty": "dist/cli.js"
  },
  "prisma": {
    "schema": "src/core/prisma/schema.prisma"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@testcontainers/postgresql": "^10.9.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.31",
    "esbuild": "^0.17.8",
    "jest": "^29.7.0",
    "prisma": "^5.13.0",
    "testcontainers": "^10.9.0",
    "ts-jest": "^29.1.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "commander": "^12.0.0",
    "express": "^4.19.2",
    "fastify": "^4.13.0",
    "morgan": "^1.10.0"
  }
}
